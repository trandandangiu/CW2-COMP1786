<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddObservationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Observation"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Observation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observation *"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etObservation"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter your observation..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@android:drawable/edit_text" />

        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time *"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="01/01/2024 12:00"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:clickable="true"
            android:focusable="true" />

        <!-- Comment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Comments"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            android:hint="Optional comments..."
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@android:drawable/edit_text" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveObservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Observation"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>